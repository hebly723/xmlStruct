<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context="com.example.jenkin.xmlstruct.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#BBB"
        android:divider="@drawable/linearlayout"
        android:orientation="horizontal"
        android:showDividers="middle"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="bottom|right"
            android:text="服务IP  "
            android:textAlignment="gravity"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:hint="(*必填*)"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#BBB"
        android:divider="@drawable/linearlayout"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="2"
            android:background="#FFF"
            android:gravity="bottom|right"
            android:text="服务端口  "
            android:textAlignment="gravity"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="(*必填*)"
            android:textSize="25sp"
            tools:ignore="HardcodedText,RtlHardcoded,TextFields" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.jenkin.xmlstruct.AlterScoreActivity">
        <Button
            android:layout_width="match_parent"
            android:background="#FAF"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:padding="1dp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="提交"
            tools:ignore="ButtonStyle,HardcodedText,InefficientWeight" />
    </LinearLayout>
</LinearLayout>
<!--tools:showIn="@layout/activity_setting"-->